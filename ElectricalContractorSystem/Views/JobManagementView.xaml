<UserControl x:Class="ElectricalContractorSystem.Views.JobManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ElectricalContractorSystem.Views"
             xmlns:helpers="clr-namespace:ElectricalContractorSystem.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024">

    <UserControl.Resources>
        <helpers:StatusToColorConverter x:Key="StatusToColorConverter" />
        <helpers:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        
        <!-- Simplified filter button style -->
        <Style x:Key="FilterButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="ActiveFilterButtonStyle" TargetType="Button" BasedOn="{StaticResource FilterButtonStyle}">
            <Setter Property="Background" Value="DarkSlateGray"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="20,20,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Text="Job Management" 
                       FontSize="24"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="New Job" 
                        Command="{Binding NewJobCommand}"
                        Background="DarkSlateGray"
                        Foreground="White"
                        Padding="15,8"
                        Margin="5,0"/>
                
                <Button Content="Bulk Status Update" 
                        Command="{Binding BulkStatusUpdateCommand}"
                        Background="#FF9800"
                        Foreground="White"
                        Padding="15,8"
                        Margin="5,0"
                        ToolTip="Update status for multiple jobs at once"/>
                
                <Button Content="Refresh" 
                        Command="{Binding RefreshJobsCommand}"
                        Background="LightGray"
                        Foreground="Black"
                        Padding="15,8"
                        Margin="5,0"/>
            </StackPanel>
        </Grid>

        <!-- Summary Cards -->
        <Grid Grid.Row="1" Margin="20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Active Jobs Card -->
            <Border Grid.Column="0" 
                    Background="White" 
                    BorderBrush="#DDDDDD" 
                    BorderThickness="1" 
                    Padding="15"
                    Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="Active Jobs" 
                               FontSize="14"
                               Foreground="Gray"/>
                    <TextBlock Text="{Binding ActiveJobCount}" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Total Estimates Card -->
            <Border Grid.Column="1" 
                    Background="White" 
                    BorderBrush="#DDDDDD" 
                    BorderThickness="1" 
                    Padding="15"
                    Margin="5,0">
                <StackPanel>
                    <TextBlock Text="Total Estimates" 
                               FontSize="14"
                               Foreground="Gray"/>
                    <TextBlock FontSize="24" 
                               FontWeight="Bold"
                               Margin="0,10,0,0">
                        <Run Text="$"/>
                        <Run Text="{Binding TotalEstimate, StringFormat='{}{0:N2}'}"/>
                    </TextBlock>
                </StackPanel>
            </Border>
            
            <!-- Actual to Date Card -->
            <Border Grid.Column="2" 
                    Background="White" 
                    BorderBrush="#DDDDDD" 
                    BorderThickness="1" 
                    Padding="15"
                    Margin="10,0,0,0">
                <StackPanel>
                    <TextBlock Text="Actual to Date" 
                               FontSize="14"
                               Foreground="Gray"/>
                    <TextBlock FontSize="24" 
                               FontWeight="Bold"
                               Margin="0,10,0,0">
                        <Run Text="$"/>
                        <Run Text="{Binding TotalActual, StringFormat='{}{0:N2}'}"/>
                    </TextBlock>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Search and Filter -->
        <Border Grid.Row="2" 
                Background="White" 
                BorderBrush="#DDDDDD" 
                BorderThickness="1" 
                Padding="15"
                Margin="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Filter Buttons -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="Active Jobs" 
                            Command="{Binding ShowActiveJobsCommand}"
                            Style="{StaticResource FilterButtonStyle}"/>
                    
                    <Button Content="Completed Jobs" 
                            Command="{Binding ShowCompletedJobsCommand}"
                            Style="{StaticResource FilterButtonStyle}"/>
                    
                    <Button Content="All Jobs" 
                            Command="{Binding ShowAllJobsCommand}"
                            Style="{StaticResource FilterButtonStyle}"/>
                </StackPanel>
                
                <!-- Search Box -->
                <Border Grid.Column="1" 
                        Background="White"
                        BorderBrush="#CCCCCC"
                        BorderThickness="1"
                        Margin="20,0,0,0"
                        Padding="5,0"
                        HorizontalAlignment="Right"
                        Width="300">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                 BorderThickness="0"
                                 VerticalAlignment="Center"
                                 Padding="5"
                                 Background="Transparent"/>
                        
                        <TextBlock Text="Search jobs..." 
                                   Grid.Column="0"
                                   Foreground="Gray"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"
                                   IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SearchText}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding SearchText}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        
                        <Button Grid.Column="1" 
                                Content="âœ•"
                                Foreground="Gray"
                                Background="Transparent"
                                BorderThickness="0"
                                Command="{Binding ClearSearchCommand}">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SearchText}" Value="">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding SearchText}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Jobs Table -->
        <Border Grid.Row="3" 
                Background="White" 
                BorderBrush="#DDDDDD" 
                BorderThickness="1"
                Margin="20,10,20,20">
            <Grid>
                <DataGrid ItemsSource="{Binding FilteredJobs}" 
                          SelectedItem="{Binding SelectedJob}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          BorderThickness="0"
                          Background="White"
                          RowBackground="White"
                          AlternatingRowBackground="#F9F9F9"
                          SelectionMode="Single"
                          SelectionUnit="FullRow">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Job #" 
                                            Binding="{Binding JobNumber}" 
                                            Width="Auto"/>
                        
                        <DataGridTextColumn Header="Customer" 
                                            Binding="{Binding JobName}" 
                                            Width="*"/>
                        
                        <DataGridTextColumn Header="Address" 
                                            Binding="{Binding Address}" 
                                            Width="*"/>
                        
                        <DataGridTemplateColumn Header="Status" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="LightBlue"
                                            CornerRadius="10" 
                                            Padding="8,2" 
                                            Margin="5">
                                        <TextBlock Text="{Binding Status}" 
                                                   Foreground="DarkBlue" 
                                                   FontSize="12" 
                                                   FontWeight="SemiBold"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <DataGridTextColumn Header="Date Created" 
                                            Binding="{Binding CreateDate, StringFormat='{}{0:MM/dd/yyyy}'}" 
                                            Width="Auto"/>
                        
                        <DataGridTextColumn Header="Estimate" 
                                            Binding="{Binding TotalEstimate, StringFormat='${0:N2}'}" 
                                            Width="Auto">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="Margin" Value="0,0,5,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTextColumn Header="Actual" 
                                            Binding="{Binding TotalActual, StringFormat='${0:N2}'}" 
                                            Width="Auto">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                    <Setter Property="Margin" Value="0,0,5,0"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <DataGridTemplateColumn Header="Actions" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="View"
                                                Command="{Binding DataContext.ViewJobDetailsCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Foreground="#2196F3"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Margin="2"/>
                                        
                                        <Button Content="Edit"
                                                Command="{Binding DataContext.EditJobCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Foreground="#4CAF50"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Margin="2"/>
                                        
                                        <Button Content="Enter Data"
                                                Command="{Binding DataContext.EnterJobDataCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Foreground="#673AB7"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Margin="2">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Complete">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                
                <!-- Loading Indicator -->
                <Border Background="#80FFFFFF" 
                        Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Loading..." 
                                   FontSize="20"
                                   Foreground="DarkSlateGray"/>
                        <ProgressBar IsIndeterminate="True" 
                                     Width="200" 
                                     Height="10" 
                                     Margin="0,10,0,0"
                                     Foreground="DarkSlateGray"/>
                    </StackPanel>
                </Border>
                
                <!-- No Data Indicator -->
                <Border Background="White">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasNoJobs}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="No jobs found" 
                                   FontSize="20"
                                   Foreground="Gray"/>
                        <TextBlock Text="Create a new job or change your search criteria" 
                                   FontSize="16"
                                   Foreground="Gray"
                                   Margin="0,10,0,0"/>
                        <Button Content="Create New Job" 
                                Command="{Binding NewJobCommand}"
                                Background="DarkSlateGray"
                                Foreground="White"
                                Padding="15,8"
                                Margin="0,20,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Error Indicator -->
                <Border Background="#80FFFFFF">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasError}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="Error loading jobs" 
                                   FontSize="20"
                                   Foreground="Red"/>
                        <TextBlock Text="{Binding ErrorMessage}" 
                                   FontSize="16"
                                   Foreground="Red"
                                   Margin="0,10,0,0"
                                   TextWrapping="Wrap"
                                   MaxWidth="400"/>
                        <Button Content="Retry" 
                                Command="{Binding RefreshJobsCommand}"
                                Background="DarkSlateGray"
                                Foreground="White"
                                Padding="15,8"
                                Margin="0,20,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>