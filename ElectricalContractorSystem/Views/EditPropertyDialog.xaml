<Window x:Class="ElectricalContractorSystem.Views.EditPropertyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Property" Height="450" Width="500"
        WindowStartupLocation="CenterOwner">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#0066CC" Padding="20">
            <TextBlock Text="Edit Property" FontSize="20" FontWeight="Bold" Foreground="White"/>
        </Border>

        <!-- Content -->
        <TextBlock Grid.Row="1" Text="Edit Property functionality coming soon..." 
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="16" Foreground="Gray"/>

        <!-- Buttons -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="10">
            <Button Content="Close" Width="100" Height="30" 
                    HorizontalAlignment="Right"
                    Click="CloseButton_Click"/>
        </Border>
    </Grid>
</Window>
