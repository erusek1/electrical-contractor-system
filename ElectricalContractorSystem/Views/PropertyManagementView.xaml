<Window x:Class="ElectricalContractorSystem.Views.PropertyManagementView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Property Management" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#0066CC" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Property Management" FontSize="24" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text="Manage customer properties and view job history" FontSize="14" Foreground="White" Opacity="0.8"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="AddPropertyButton" Content="Add Property" 
                            Style="{StaticResource PrimaryButtonStyle}" 
                            Click="AddPropertyButton_Click"
                            Margin="0,0,10,0"/>
                    <Button x:Name="RefreshButton" Content="Refresh" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Click="RefreshButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Customer/Property List -->
            <Border Grid.Column="0" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Search -->
                    <Border Grid.Row="0" Background="White" Padding="10" Margin="10" CornerRadius="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="SearchTextBox" 
                                     Style="{StaticResource SearchBoxStyle}"
                                     TextChanged="SearchTextBox_TextChanged"/>
                            <Button Grid.Column="1" Content="🔍" Width="30" Height="30" Margin="5,0,0,0"/>
                        </Grid>
                    </Border>

                    <!-- Customer TreeView -->
                    <TreeView x:Name="CustomerTreeView" Grid.Row="1" Margin="10,0,10,10"
                              SelectedItemChanged="CustomerTreeView_SelectedItemChanged">
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Properties}">
                                <Border Background="White" CornerRadius="5" Padding="10" Margin="0,2">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
                                        <TextBlock Text="{Binding PropertyCountText}" FontSize="12" Foreground="Gray"/>
                                    </StackPanel>
                                </Border>
                                <HierarchicalDataTemplate.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#F9F9F9" CornerRadius="3" Padding="8" Margin="20,2,0,2">
                                            <StackPanel>
                                                <TextBlock Text="{Binding Address}" FontWeight="SemiBold"/>
                                                <TextBlock FontSize="11" Foreground="Gray">
                                                    <TextBlock.Text>
                                                        <MultiBinding StringFormat="{}{0} • {1} Jobs">
                                                            <Binding Path="PropertyType"/>
                                                            <Binding Path="TotalJobCount"/>
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </HierarchicalDataTemplate.ItemTemplate>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Grid>
            </Border>

            <!-- Property Details and Jobs -->
            <Grid Grid.Column="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Property Details -->
                <Border x:Name="PropertyDetailsPanel" Grid.Row="0" Background="White" 
                        CornerRadius="5" Padding="20" Margin="0,0,0,20"
                        Visibility="Collapsed">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Property Header -->
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock x:Name="PropertyAddressText" FontSize="20" FontWeight="Bold"/>
                                <TextBlock x:Name="PropertyCustomerText" FontSize="14" Foreground="Gray" Margin="0,5,0,0"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button x:Name="EditPropertyButton" Content="Edit" 
                                        Style="{StaticResource SmallButtonStyle}"
                                        Click="EditPropertyButton_Click"
                                        Margin="0,0,5,0"/>
                                <Button x:Name="AddJobButton" Content="Add Job" 
                                        Style="{StaticResource PrimaryButtonStyle}"
                                        Click="AddJobButton_Click"/>
                            </StackPanel>
                        </Grid>

                        <!-- Property Info Grid -->
                        <Grid Grid.Row="1" Margin="0,20,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Property Type" FontWeight="Bold" FontSize="12" Foreground="Gray"/>
                                <TextBlock x:Name="PropertyTypeText" FontSize="14" Margin="0,5,0,0"/>
                                
                                <TextBlock Text="Square Footage" FontWeight="Bold" FontSize="12" Foreground="Gray" Margin="0,15,0,0"/>
                                <TextBlock x:Name="SquareFootageText" FontSize="14" Margin="0,5,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Year Built" FontWeight="Bold" FontSize="12" Foreground="Gray"/>
                                <TextBlock x:Name="YearBuiltText" FontSize="14" Margin="0,5,0,0"/>
                                
                                <TextBlock Text="Floors" FontWeight="Bold" FontSize="12" Foreground="Gray" Margin="0,15,0,0"/>
                                <TextBlock x:Name="NumFloorsText" FontSize="14" Margin="0,5,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Total Jobs" FontWeight="Bold" FontSize="12" Foreground="Gray"/>
                                <TextBlock x:Name="TotalJobsText" FontSize="14" Margin="0,5,0,0"/>
                                
                                <TextBlock Text="Active Jobs" FontWeight="Bold" FontSize="12" Foreground="Gray" Margin="0,15,0,0"/>
                                <TextBlock x:Name="ActiveJobsText" FontSize="14" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Grid>

                        <!-- Electrical Panel Info -->
                        <StackPanel Grid.Row="2" Margin="0,20,0,0">
                            <TextBlock Text="Electrical Panel Information" FontWeight="Bold" FontSize="12" Foreground="Gray"/>
                            <TextBlock x:Name="ElectricalPanelText" FontSize="14" Margin="0,5,0,0" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Jobs List Header -->
                <Border x:Name="JobsHeaderPanel" Grid.Row="1" Visibility="Collapsed">
                    <TextBlock Text="Job History" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                </Border>

                <!-- Jobs DataGrid -->
                <DataGrid x:Name="JobsDataGrid" Grid.Row="2"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          GridLinesVisibility="None"
                          HeadersVisibility="Column"
                          Visibility="Collapsed"
                          MouseDoubleClick="JobsDataGrid_MouseDoubleClick">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Job #" Binding="{Binding JobNumber}" Width="60"/>
                        <DataGridTextColumn Header="Job Name" Binding="{Binding JobName}" Width="*"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Status}" Value="Complete">
                                            <Setter Property="Foreground" Value="Green"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="In Progress">
                                            <Setter Property="Foreground" Value="Blue"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Status}" Value="Estimate">
                                            <Setter Property="Foreground" Value="Orange"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Created" Binding="{Binding CreateDate, StringFormat=\{0:MM/dd/yyyy\}}" Width="100"/>
                        <DataGridTextColumn Header="Completed" Binding="{Binding CompletionDate, StringFormat=\{0:MM/dd/yyyy\}}" Width="100"/>
                        <DataGridTextColumn Header="Estimate" Binding="{Binding TotalEstimate, StringFormat=C}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Actual" Binding="{Binding TotalActual, StringFormat=C}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- No Selection Message -->
                <Border x:Name="NoSelectionPanel" Grid.Row="0" Grid.RowSpan="3" 
                        HorizontalAlignment="Center" VerticalAlignment="Center">
                    <StackPanel>
                        <TextBlock Text="Select a property to view details" 
                                   FontSize="18" Foreground="Gray" 
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Properties are grouped by customer on the left" 
                                   FontSize="14" Foreground="Gray" 
                                   HorizontalAlignment="Center" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Ready"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="CustomerCountText" Text="0 Customers"/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock x:Name="PropertyCountText" Text="0 Properties"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
