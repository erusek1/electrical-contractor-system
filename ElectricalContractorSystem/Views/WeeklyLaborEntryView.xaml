<UserControl x:Class="ElectricalContractorSystem.Views.WeeklyLaborEntryView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElectricalContractorSystem.Views"
        xmlns:vm="clr-namespace:ElectricalContractorSystem.ViewModels"
        xmlns:helpers="clr-namespace:ElectricalContractorSystem.Helpers"
        mc:Ignorable="d">
    
    <UserControl.Resources>
        <helpers:HoursStatusConverter x:Key="HoursStatusConverter"/>
        <helpers:HoursStatusTextConverter x:Key="HoursStatusTextConverter"/>
        <helpers:EmployeeTotalConverter x:Key="EmployeeTotalConverter"/>
        <helpers:EmployeeStatusConverter x:Key="EmployeeStatusConverter"/>
        <helpers:EmployeeStatusTextConverter x:Key="EmployeeStatusTextConverter"/>
        
        <!-- Style for ComboBox to reduce default size -->
        <Style x:Key="CompactComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="22"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="FontSize" Value="10"/>
        </Style>
        
        <!-- Style for TextBox hours input -->
        <Style x:Key="HoursTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="22"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="10"/>
        </Style>
    </UserControl.Resources>
    
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Grid Grid.Row="0" Margin="20,20,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Text="Weekly Labor Entry" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
            
            <Button Grid.Column="1" Content="Manage Employees" Command="{Binding ManageEmployeesCommand}" 
                    Background="#FF9800" Foreground="White" Padding="15,8" BorderThickness="0" Margin="0,0,10,0"/>
            
            <Button Grid.Column="2" Content="Save All Entries" Command="{Binding SaveAllEntriesCommand}" 
                    Background="#43A047" Foreground="White" Padding="15,8" BorderThickness="0"/>
        </Grid>
        
        <!-- Week Selection -->
        <Border Grid.Row="1" Background="White" Margin="20,10" Padding="20" CornerRadius="5" 
                BorderBrush="#E0E0E0" BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0" Content="Previous Week" Command="{Binding PreviousWeekCommand}" 
                        Background="#1976D2" Foreground="White" Padding="15,8" BorderThickness="0"/>
                
                <TextBlock Grid.Column="1" Text="{Binding WeekDateRange}" FontSize="18" FontWeight="SemiBold" 
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                
                <Button Grid.Column="2" Content="Next Week" Command="{Binding NextWeekCommand}" 
                        Background="#1976D2" Foreground="White" Padding="15,8" BorderThickness="0"/>
            </Grid>
        </Border>
        
        <!-- Employee Management -->
        <Border Grid.Row="2" Background="White" Margin="20,10" Padding="20" CornerRadius="5" 
                BorderBrush="#E0E0E0" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Employee Management" FontSize="14" FontWeight="SemiBold" 
                           Foreground="#424242" Margin="0,0,0,10"/>
                
                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <TextBox x:Name="NewEmployeeNameTextBox" Width="150" Height="25" Margin="0,0,10,0" 
                             VerticalAlignment="Center" Text="{Binding NewEmployeeName, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBox x:Name="NewEmployeeRateTextBox" Width="100" Height="25" Margin="0,0,10,0" 
                             VerticalAlignment="Center" Text="{Binding NewEmployeeRate, UpdateSourceTrigger=PropertyChanged}"/>
                    <Button Content="Add Employee" Command="{Binding AddEmployeeCommand}" 
                            Background="#4CAF50" Foreground="White" Padding="10,5" BorderThickness="0" Margin="0,0,10,0"/>
                    <Button Content="Remove Selected" Command="{Binding RemoveEmployeeCommand}" 
                            Background="#F44336" Foreground="White" Padding="10,5" BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Weekly Summary -->
        <Border Grid.Row="3" Background="White" Margin="20,10" Padding="20" CornerRadius="5" 
                BorderBrush="#E0E0E0" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Weekly Summary" FontSize="16" FontWeight="SemiBold" 
                           Foreground="#424242" Margin="0,0,0,15"/>
                
                <DataGrid Grid.Row="1" ItemsSource="{Binding Employees}" AutoGenerateColumns="False" 
                          HeadersVisibility="Column" GridLinesVisibility="None" 
                          RowHeaderWidth="0" Background="Transparent" BorderThickness="0" IsReadOnly="True"
                          SelectedItem="{Binding SelectedEmployee}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Employee" Binding="{Binding Name}" Width="200"/>
                        <DataGridTextColumn Header="Hourly Rate" Binding="{Binding HourlyRate, StringFormat=C}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Total Hours" Binding="{Binding Name, Converter={StaticResource EmployeeTotalConverter}}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTemplateColumn Header="Status" Width="150">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding Name, Converter={StaticResource EmployeeStatusConverter}}" 
                                            CornerRadius="10" Padding="8,3" HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding Name, Converter={StaticResource EmployeeStatusTextConverter}}" 
                                                   Foreground="White" FontSize="11" FontWeight="SemiBold"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
        
        <!-- Time Entry Grid -->
        <Border Grid.Row="4" Background="White" Margin="20,10,20,20" CornerRadius="5" 
                BorderBrush="#E0E0E0" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="Time Entries" FontSize="16" FontWeight="SemiBold" 
                           Foreground="#424242" Margin="20,15"/>
                
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Headers -->
                        <Grid Grid.Row="0" Background="#F5F5F5" MinHeight="30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*" MinWidth="140"/>
                                <ColumnDefinition Width="*" MinWidth="140"/>
                                <ColumnDefinition Width="*" MinWidth="140"/>
                                <ColumnDefinition Width="*" MinWidth="140"/>
                                <ColumnDefinition Width="*" MinWidth="140"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="Employee" FontWeight="SemiBold" Padding="10,5" Foreground="#757575" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="Monday" FontWeight="SemiBold" Padding="10,5" Foreground="#757575" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="Tuesday" FontWeight="SemiBold" Padding="10,5" Foreground="#757575" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="3" Text="Wednesday" FontWeight="SemiBold" Padding="10,5" Foreground="#757575" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="4" Text="Thursday" FontWeight="SemiBold" Padding="10,5" Foreground="#757575" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="5" Text="Friday" FontWeight="SemiBold" Padding="10,5" Foreground="#757575" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="6" Text="Total" FontWeight="SemiBold" Padding="10,5" Foreground="#757575" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        
                        <!-- Employee Rows -->
                        <ItemsControl Grid.Row="1" ItemsSource="{Binding EmployeeTimeEntries}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" MinHeight="85">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="*" MinWidth="140"/>
                                                <ColumnDefinition Width="*" MinWidth="140"/>
                                                <ColumnDefinition Width="*" MinWidth="140"/>
                                                <ColumnDefinition Width="*" MinWidth="140"/>
                                                <ColumnDefinition Width="*" MinWidth="140"/>
                                                <ColumnDefinition Width="80"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <!-- Employee Name -->
                                            <TextBlock Grid.Column="0" Text="{Binding EmployeeName}" Padding="10,15" VerticalAlignment="Center" FontWeight="SemiBold"/>
                                            
                                            <!-- Monday -->
                                            <StackPanel Grid.Column="1" Margin="3" VerticalAlignment="Center">
                                                <ComboBox ItemsSource="{Binding DataContext.ActiveJobs, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                          SelectedValue="{Binding Monday.JobNumber}" 
                                                          DisplayMemberPath="JobNumberWithDescription" 
                                                          SelectedValuePath="JobNumber"
                                                          Style="{StaticResource CompactComboBox}"/>
                                                <ComboBox ItemsSource="{Binding DataContext.StageNames, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                          SelectedValue="{Binding Monday.Stage}"
                                                          Style="{StaticResource CompactComboBox}"/>
                                                <TextBox Text="{Binding Monday.Hours, UpdateSourceTrigger=PropertyChanged}" 
                                                         Style="{StaticResource HoursTextBox}"/>
                                            </StackPanel>
                                            
                                            <!-- Tuesday -->
                                            <StackPanel Grid.Column="2" Margin="3" VerticalAlignment="Center">
                                                <ComboBox ItemsSource="{Binding DataContext.ActiveJobs, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                          SelectedValue="{Binding Tuesday.JobNumber}" 
                                                          DisplayMemberPath="JobNumberWithDescription" 
                                                          SelectedValuePath="JobNumber"
                                                          Style="{StaticResource CompactComboBox}"/>
                                                <ComboBox ItemsSource="{Binding DataContext.StageNames, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                          SelectedValue="{Binding Tuesday.Stage}"
                                                          Style="{StaticResource CompactComboBox}"/>
                                                <TextBox Text="{Binding Tuesday.Hours, UpdateSourceTrigger=PropertyChanged}" 
                                                         Style="{StaticResource HoursTextBox}"/>
                                            </StackPanel>
                                            
                                            <!-- Wednesday -->
                                            <StackPanel Grid.Column="3" Margin="3" VerticalAlignment="Center">
                                                <ComboBox ItemsSource="{Binding DataContext.ActiveJobs, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                          SelectedValue="{Binding Wednesday.JobNumber}" 
                                                          DisplayMemberPath="JobNumberWithDescription" 
                                                          SelectedValuePath="JobNumber"
                                                          Style="{StaticResource CompactComboBox}"/>
                                                <ComboBox ItemsSource="{Binding DataContext.StageNames, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                          SelectedValue="{Binding Wednesday.Stage}"
                                                          Style="{StaticResource CompactComboBox}"/>
                                                <TextBox Text="{Binding Wednesday.Hours, UpdateSourceTrigger=PropertyChanged}" 
                                                         Style="{StaticResource HoursTextBox}"/>
                                            </StackPanel>
                                            
                                            <!-- Thursday -->
                                            <StackPanel Grid.Column="4" Margin="3" VerticalAlignment="Center">
                                                <ComboBox ItemsSource="{Binding DataContext.ActiveJobs, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                          SelectedValue="{Binding Thursday.JobNumber}" 
                                                          DisplayMemberPath="JobNumberWithDescription" 
                                                          SelectedValuePath="JobNumber"
                                                          Style="{StaticResource CompactComboBox}"/>
                                                <ComboBox ItemsSource="{Binding DataContext.StageNames, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                          SelectedValue="{Binding Thursday.Stage}"
                                                          Style="{StaticResource CompactComboBox}"/>
                                                <TextBox Text="{Binding Thursday.Hours, UpdateSourceTrigger=PropertyChanged}" 
                                                         Style="{StaticResource HoursTextBox}"/>
                                            </StackPanel>
                                            
                                            <!-- Friday -->
                                            <StackPanel Grid.Column="5" Margin="3" VerticalAlignment="Center">
                                                <ComboBox ItemsSource="{Binding DataContext.ActiveJobs, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                          SelectedValue="{Binding Friday.JobNumber}" 
                                                          DisplayMemberPath="JobNumberWithDescription" 
                                                          SelectedValuePath="JobNumber"
                                                          Style="{StaticResource CompactComboBox}"/>
                                                <ComboBox ItemsSource="{Binding DataContext.StageNames, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                          SelectedValue="{Binding Friday.Stage}"
                                                          Style="{StaticResource CompactComboBox}"/>
                                                <TextBox Text="{Binding Friday.Hours, UpdateSourceTrigger=PropertyChanged}" 
                                                         Style="{StaticResource HoursTextBox}"/>
                                            </StackPanel>
                                            
                                            <!-- Total -->
                                            <TextBlock Grid.Column="6" Text="{Binding TotalHours}"
                                                       FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="Red"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding TotalHours}" Value="40">
                                                                <Setter Property="Foreground" Value="Green"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>