<UserControl x:Class="ElectricalContractorSystem.Views.AssemblyManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="Assembly Management" 
                           FontSize="24" FontWeight="Bold" 
                           Foreground="White"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Import from Excel" 
                            Command="{Binding ImportFromExcelCommand}"
                            Background="#3498DB" Foreground="White"
                            Padding="15,8" Margin="0,0,10,0"
                            BorderThickness="0"/>
                    <Button Content="New Assembly" 
                            Command="{Binding CreateAssemblyCommand}"
                            Background="#27AE60" Foreground="White"
                            Padding="15,8" BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel - Assembly List -->
            <Border Grid.Column="0" Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Search and Filter -->
                    <Grid Grid.Row="0" Margin="15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBox Grid.Row="0" 
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Tag="Search assemblies..."
                                 Padding="8" Margin="0,0,0,10"/>
                        
                        <ComboBox Grid.Row="1" 
                                  ItemsSource="{Binding Categories}"
                                  SelectedItem="{Binding SelectedCategory}"
                                  Margin="0,0,0,10"/>
                        
                        <CheckBox Grid.Row="2" 
                                  Content="Show inactive assemblies"
                                  IsChecked="{Binding ShowInactiveAssemblies}"/>
                    </Grid>
                    
                    <!-- Assembly List -->
                    <DataGrid Grid.Row="2" 
                              ItemsSource="{Binding FilteredAssemblies}"
                              SelectedItem="{Binding SelectedAssembly}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              GridLinesVisibility="None"
                              BorderThickness="0"
                              Background="Transparent">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Code" 
                                                Binding="{Binding AssemblyCode}" 
                                                Width="60"/>
                            <DataGridTextColumn Header="Name" 
                                                Binding="{Binding Name}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="Category" 
                                                Binding="{Binding Category}" 
                                                Width="100"/>
                            <DataGridCheckBoxColumn Header="Active" 
                                                    Binding="{Binding IsActive}" 
                                                    Width="50"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
            
            <!-- Right Panel - Assembly Details -->
            <Grid Grid.Column="1" Margin="20">
                <!-- Normal View (when not creating/editing) -->
                <Grid Visibility="{Binding IsCreatingAssembly, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsEditingAssembly}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                    
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Assembly Header -->
                    <Border Grid.Row="0" Background="White" Padding="20" 
                            BorderBrush="#E0E0E0" BorderThickness="1"
                            CornerRadius="5" Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{Binding SelectedAssembly.Name}" 
                                           FontSize="20" FontWeight="Bold"/>
                                <TextBlock Text="{Binding SelectedAssembly.AssemblyCode}" 
                                           FontSize="14" Foreground="Gray" Margin="0,5,0,0"/>
                                <TextBlock Text="{Binding SelectedAssembly.Description}" 
                                           FontSize="14" Margin="0,5,0,0" TextWrapping="Wrap"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">
                                <Button Content="Edit" 
                                        Command="{Binding EditAssemblyCommand}"
                                        Padding="10,5" Margin="0,0,5,0"/>
                                <Button Content="Create Variant" 
                                        Command="{Binding CreateVariantCommand}"
                                        Padding="10,5" Margin="0,0,5,0"/>
                                <Button Content="Duplicate" 
                                        Command="{Binding DuplicateAssemblyCommand}"
                                        Padding="10,5" Margin="0,0,5,0"/>
                                <Button Content="Delete" 
                                        Command="{Binding DeleteAssemblyCommand}"
                                        Background="#E74C3C" Foreground="White"
                                        Padding="10,5"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Labor Minutes -->
                    <Border Grid.Row="1" Background="White" Padding="20" 
                            BorderBrush="#E0E0E0" BorderThickness="1"
                            CornerRadius="5" Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Rough" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding SelectedAssembly.RoughMinutes, StringFormat='{}{0} min'}" 
                                           FontSize="18"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Margin="0,0,10,0">
                                <TextBlock Text="Finish" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding SelectedAssembly.FinishMinutes, StringFormat='{}{0} min'}" 
                                           FontSize="18"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2" Margin="0,0,10,0">
                                <TextBlock Text="Service" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding SelectedAssembly.ServiceMinutes, StringFormat='{}{0} min'}" 
                                           FontSize="18"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="3" Margin="0,0,10,0">
                                <TextBlock Text="Extra" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding SelectedAssembly.ExtraMinutes, StringFormat='{}{0} min'}" 
                                           FontSize="18"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="4">
                                <TextBlock Text="Total Hours" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding TotalLaborHours, Mode=OneWay, StringFormat='{}{0:N1} hrs'}" 
                                           FontSize="18" Foreground="#3498DB"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Components and Variants Tabs -->
                    <TabControl Grid.Row="2">
                        <!-- Components Tab -->
                        <TabItem Header="Components">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Add Component -->
                                <Border Grid.Row="0" Background="#F8F9FA" Padding="15" Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <ComboBox Grid.Column="0" 
                                                  ItemsSource="{Binding Materials}"
                                                  SelectedItem="{Binding SelectedMaterial}"
                                                  DisplayMemberPath="Name"
                                                  Margin="0,0,10,0"/>
                                        
                                        <TextBox Grid.Column="1" 
                                                 Text="{Binding ComponentQuantity}"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,10,0"/>
                                        
                                        <Button Grid.Column="2" 
                                                Content="Add Component" 
                                                Command="{Binding AddComponentCommand}"
                                                Padding="10,5"/>
                                    </Grid>
                                </Border>
                                
                                <!-- Components List -->
                                <DataGrid Grid.Row="1" 
                                          ItemsSource="{Binding SelectedAssembly.Components}"
                                          AutoGenerateColumns="False"
                                          CanUserAddRows="False"
                                          GridLinesVisibility="Horizontal"
                                          BorderThickness="1"
                                          BorderBrush="#E0E0E0">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Material" 
                                                            Binding="{Binding Material.Name}" 
                                                            Width="*"/>
                                        <DataGridTextColumn Header="Code" 
                                                            Binding="{Binding Material.MaterialCode}" 
                                                            Width="80"/>
                                        <DataGridTextColumn Header="Quantity" 
                                                            Binding="{Binding Quantity}" 
                                                            Width="80"/>
                                        <DataGridTextColumn Header="Unit Cost" 
                                                            Binding="{Binding Material.PriceWithTax, StringFormat='${0:N2}'}" 
                                                            Width="100"/>
                                        <DataGridTextColumn Header="Total Cost" 
                                                            Binding="{Binding TotalCost, StringFormat='${0:N2}'}" 
                                                            Width="100"/>
                                        <DataGridTemplateColumn Width="50">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Content="X" 
                                                            Command="{Binding DataContext.RemoveComponentCommand, 
                                                                      RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"
                                                            Background="#E74C3C" Foreground="White"
                                                            Width="25" Height="25"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                                
                                <!-- Total Material Cost -->
                                <Border Grid.Row="2" Background="#F8F9FA" Padding="15" Margin="0,10,0,0">
                                    <TextBlock HorizontalAlignment="Right">
                                        <Run Text="Total Material Cost: " FontWeight="Bold"/>
                                        <Run Text="{Binding TotalMaterialCost, Mode=OneWay, StringFormat='${0:N2}'}" 
                                             FontSize="18" Foreground="#27AE60"/>
                                    </TextBlock>
                                </Border>
                            </Grid>
                        </TabItem>
                        
                        <!-- Variants Tab -->
                        <TabItem Header="Variants">
                            <DataGrid ItemsSource="{Binding AssemblyVariants}"
                                      SelectedItem="{Binding SelectedVariant}"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      GridLinesVisibility="Horizontal"
                                      BorderThickness="1"
                                      BorderBrush="#E0E0E0">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Name" 
                                                        Binding="{Binding Name}" 
                                                        Width="*"/>
                                    <DataGridCheckBoxColumn Header="Default" 
                                                            Binding="{Binding IsDefault}" 
                                                            Width="60"/>
                                    <DataGridTextColumn Header="Material Cost" 
                                                        Binding="{Binding TotalMaterialCost, Mode=OneWay, StringFormat='${0:N2}'}" 
                                                        Width="100"/>
                                    <DataGridTextColumn Header="Labor Hours" 
                                                        Binding="{Binding TotalLaborHours, Mode=OneWay, StringFormat='{}{0:N1}'}" 
                                                        Width="100"/>
                                    <DataGridTemplateColumn Width="100">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="Make Default" 
                                                        Padding="5,2"
                                                        FontSize="11"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </TabItem>
                    </TabControl>
                </Grid>
                
                <!-- Create/Edit Assembly View -->
                <Border Background="White" Padding="30" 
                        BorderBrush="#E0E0E0" BorderThickness="1"
                        CornerRadius="5">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsCreatingAssembly}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsEditingAssembly}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Title -->
                        <TextBlock Grid.Row="0" FontSize="24" FontWeight="Bold" Margin="0,0,0,20">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="Create New Assembly"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsEditingAssembly}" Value="True">
                                            <Setter Property="Text" Value="Edit Assembly"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        
                        <!-- Basic Info -->
                        <Grid Grid.Row="1" Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Code:" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding NewAssemblyCode}" />
                            
                            <TextBlock Grid.Row="0" Grid.Column="3" Text="Category:" VerticalAlignment="Center"/>
                            <ComboBox Grid.Row="0" Grid.Column="4" 
                                      ItemsSource="{Binding Categories}"
                                      SelectedItem="{Binding NewAssemblyCategory}"/>
                            
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Name:" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" Text="{Binding NewAssemblyName}" />
                        </Grid>
                        
                        <!-- Description -->
                        <Grid Grid.Row="2" Margin="0,0,0,20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="80"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Text="Description:"/>
                            <TextBox Grid.Row="2" Text="{Binding NewAssemblyDescription}" 
                                     TextWrapping="Wrap" AcceptsReturn="True" 
                                     VerticalScrollBarVisibility="Auto"/>
                        </Grid>
                        
                        <!-- Labor Minutes -->
                        <TextBlock Grid.Row="3" Text="Labor Minutes by Stage:" FontWeight="Bold" Margin="0,0,0,10"/>
                        
                        <Grid Grid.Row="4" Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Rough" Margin="0,0,10,0"/>
                            <TextBox Grid.Row="2" Grid.Column="0" Text="{Binding NewRoughMinutes}" Margin="0,0,10,0"/>
                            
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="Finish" Margin="0,0,10,0"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding NewFinishMinutes}" Margin="0,0,10,0"/>
                            
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="Service" Margin="0,0,10,0"/>
                            <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding NewServiceMinutes}" Margin="0,0,10,0"/>
                            
                            <TextBlock Grid.Row="0" Grid.Column="3" Text="Extra"/>
                            <TextBox Grid.Row="2" Grid.Column="3" Text="{Binding NewExtraMinutes}"/>
                        </Grid>
                        
                        <!-- Spacer -->
                        <Grid Grid.Row="5"/>
                        
                        <!-- Action Buttons -->
                        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Cancel" 
                                    Padding="15,8" Margin="0,0,10,0"
                                    Background="LightGray">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Command" Value="{Binding CancelNewAssemblyCommand}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsEditingAssembly}" Value="True">
                                                <Setter Property="Command" Value="{Binding CancelEditAssemblyCommand}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            
                            <Button Content="Save" 
                                    Padding="15,8"
                                    Background="#27AE60" Foreground="White">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Command" Value="{Binding SaveNewAssemblyCommand}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsEditingAssembly}" Value="True">
                                                <Setter Property="Command" Value="{Binding SaveEditAssemblyCommand}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
    
    <UserControl.Resources>
        <!-- Add the InverseBooleanToVisibilityConverter -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <Style x:Key="InverseBooleanToVisibilityConverter" TargetType="FrameworkElement">
            <Setter Property="Visibility" Value="Visible"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=.}" Value="True">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
</UserControl>