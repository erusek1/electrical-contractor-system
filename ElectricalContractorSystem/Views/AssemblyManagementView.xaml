<UserControl x:Class="ElectricalContractorSystem.Views.AssemblyManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:helpers="clr-namespace:ElectricalContractorSystem.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <helpers:BooleanToStringConverter x:Key="BooleanToStringConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="Assembly Management" 
                           FontSize="24" FontWeight="Bold" 
                           Foreground="White"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Refresh" 
                            Command="{Binding RefreshCommand}"
                            Background="#95A5A6" Foreground="White"
                            Padding="15,8" Margin="0,0,10,0"
                            BorderThickness="0"/>
                    <Button Content="Create Assembly" 
                            Command="{Binding CreateAssemblyCommand}"
                            Background="#27AE60" Foreground="White"
                            Padding="15,8" BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel - Assembly List -->
            <Border Grid.Column="0" Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Search -->
                    <Grid Grid.Row="0" Margin="15">
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Tag="Search assemblies..."
                                 Padding="8">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <VisualBrush AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                                        <VisualBrush.Visual>
                                                            <Label Content="{Binding Tag, RelativeSource={RelativeSource AncestorType=TextBox}}" 
                                                                   Foreground="Gray" Padding="5,0,0,0"/>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Grid>
                    
                    <!-- Assembly List -->
                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding Assemblies}"
                              SelectedItem="{Binding SelectedAssembly}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              GridLinesVisibility="None"
                              BorderThickness="0"
                              Background="Transparent">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Code" 
                                                Binding="{Binding AssemblyCode}" 
                                                Width="80"/>
                            <DataGridTextColumn Header="Name" 
                                                Binding="{Binding Name}" 
                                                Width="*"/>
                            <DataGridCheckBoxColumn Header="Default" 
                                                    Binding="{Binding IsDefault}" 
                                                    Width="60"
                                                    IsReadOnly="True"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
            
            <!-- Right Panel - Assembly Details -->
            <Grid Grid.Column="1" Margin="20">
                <Grid Visibility="{Binding IsAssemblySelected, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Assembly Header -->
                    <Border Grid.Row="0" Background="White" Padding="20" 
                            BorderBrush="#E0E0E0" BorderThickness="1"
                            CornerRadius="5" Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{Binding SelectedAssembly.Name}" 
                                           FontSize="20" FontWeight="Bold"/>
                                <TextBlock FontSize="14" Foreground="Gray" Margin="0,5,0,0">
                                    <Run Text="Code: "/>
                                    <Run Text="{Binding SelectedAssembly.AssemblyCode}" FontWeight="Bold"/>
                                    <Run Text="   |   "/>
                                    <Run Text="{Binding SelectedAssembly.IsDefault, Converter={StaticResource BooleanToStringConverter}, ConverterParameter='Default|Variant'}"/>
                                </TextBlock>
                                <TextBlock Text="{Binding SelectedAssembly.Description}" 
                                           FontSize="14" Margin="0,10,0,0" TextWrapping="Wrap"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Top">
                                <Button Content="Edit" 
                                        Command="{Binding EditAssemblyCommand}"
                                        Background="#3498DB" Foreground="White"
                                        Padding="10,5" Margin="0,0,5,0"/>
                                <Button Content="Duplicate" 
                                        Command="{Binding DuplicateAssemblyCommand}"
                                        Background="#9B59B6" Foreground="White"
                                        Padding="10,5" Margin="0,0,5,0"/>
                                <Button Content="Delete" 
                                        Command="{Binding DeleteAssemblyCommand}"
                                        Background="#E74C3C" Foreground="White"
                                        Padding="10,5"
                                        Visibility="{Binding CanDeleteAssembly, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Labor Minutes -->
                    <Border Grid.Row="1" Background="White" Padding="20" 
                            BorderBrush="#E0E0E0" BorderThickness="1"
                            CornerRadius="5" Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Rough" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding SelectedAssembly.RoughMinutes, StringFormat='{}{0} min'}" 
                                           FontSize="18"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Margin="0,0,10,0">
                                <TextBlock Text="Finish" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding SelectedAssembly.FinishMinutes, StringFormat='{}{0} min'}" 
                                           FontSize="18"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="2" Margin="0,0,10,0">
                                <TextBlock Text="Service" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding SelectedAssembly.ServiceMinutes, StringFormat='{}{0} min'}" 
                                           FontSize="18"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="3" Margin="0,0,10,0">
                                <TextBlock Text="Extra" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding SelectedAssembly.ExtraMinutes, StringFormat='{}{0} min'}" 
                                           FontSize="18"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="4">
                                <TextBlock Text="Total Hours" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock Text="{Binding TotalLaborHours, StringFormat='{}{0:N1} hrs'}" 
                                           FontSize="18" Foreground="#3498DB" FontWeight="Bold"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Components and Variants Tabs -->
                    <TabControl Grid.Row="2">
                        <!-- Components Tab -->
                        <TabItem Header="Components">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Components List -->
                                <DataGrid Grid.Row="0" 
                                          ItemsSource="{Binding Components}"
                                          SelectedItem="{Binding SelectedComponent}"
                                          AutoGenerateColumns="False"
                                          CanUserAddRows="False"
                                          GridLinesVisibility="Horizontal"
                                          BorderThickness="1"
                                          BorderBrush="#E0E0E0">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Material" 
                                                            Binding="{Binding Material.Name}" 
                                                            Width="*"/>
                                        <DataGridTextColumn Header="Code" 
                                                            Binding="{Binding Material.ItemCode}" 
                                                            Width="80"/>
                                        <DataGridTextColumn Header="Quantity" 
                                                            Binding="{Binding Quantity}" 
                                                            Width="80"/>
                                        <DataGridTextColumn Header="Unit" 
                                                            Binding="{Binding Material.UnitOfMeasure}" 
                                                            Width="60"/>
                                        <DataGridTextColumn Header="Unit Cost" 
                                                            Binding="{Binding Material.CurrentPrice, StringFormat='${0:N2}'}" 
                                                            Width="100"/>
                                        <DataGridTextColumn Header="Total Cost" 
                                                            Binding="{Binding TotalCost, StringFormat='${0:N2}'}" 
                                                            Width="100"/>
                                        <DataGridTemplateColumn Width="50">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Content="X" 
                                                            Command="{Binding DataContext.DeleteComponentCommand, 
                                                                      RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"
                                                            Background="#E74C3C" Foreground="White"
                                                            Width="25" Height="25"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                                
                                <!-- Total Material Cost -->
                                <Border Grid.Row="1" Background="#F8F9FA" Padding="15" Margin="0,10,0,0">
                                    <TextBlock HorizontalAlignment="Right">
                                        <Run Text="Total Material Cost: " FontWeight="Bold"/>
                                        <Run Text="{Binding TotalMaterialCost, StringFormat='${0:N2}'}" 
                                             FontSize="18" Foreground="#27AE60" FontWeight="Bold"/>
                                    </TextBlock>
                                </Border>
                            </Grid>
                        </TabItem>
                        
                        <!-- Variants Tab -->
                        <TabItem Header="Variants">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Create Variant Button -->
                                <Button Grid.Row="0" 
                                        Content="Create New Variant" 
                                        Command="{Binding CreateVariantCommand}"
                                        Background="#3498DB" Foreground="White"
                                        Padding="10,5" Margin="10"
                                        HorizontalAlignment="Left"/>
                                
                                <!-- Variants List -->
                                <DataGrid Grid.Row="1" 
                                          ItemsSource="{Binding Variants}"
                                          SelectedItem="{Binding SelectedVariant}"
                                          AutoGenerateColumns="False"
                                          CanUserAddRows="False"
                                          GridLinesVisibility="Horizontal"
                                          BorderThickness="1"
                                          BorderBrush="#E0E0E0"
                                          Margin="10,0,10,10">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Name" 
                                                            Binding="{Binding VariantAssembly.Name}" 
                                                            Width="*"/>
                                        <DataGridCheckBoxColumn Header="Default" 
                                                                Binding="{Binding VariantAssembly.IsDefault}" 
                                                                Width="60"
                                                                IsReadOnly="True"/>
                                        <DataGridTextColumn Header="Components" 
                                                            Binding="{Binding ComponentCount}" 
                                                            Width="100"/>
                                        <DataGridTemplateColumn Width="120">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Content="Set as Default" 
                                                            Command="{Binding DataContext.SetDefaultVariantCommand, 
                                                                      RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"
                                                            Background="#27AE60" Foreground="White"
                                                            Padding="5,2"
                                                            Visibility="{Binding DataContext.CanSetAsDefault, 
                                                                        RelativeSource={RelativeSource AncestorType=UserControl},
                                                                        Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Width="60">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Content="Delete" 
                                                            Command="{Binding DataContext.DeleteVariantCommand, 
                                                                      RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"
                                                            Background="#E74C3C" Foreground="White"
                                                            Padding="5,2"
                                                            Visibility="{Binding DataContext.CanDeleteVariant, 
                                                                        RelativeSource={RelativeSource AncestorType=UserControl},
                                                                        Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
                
                <!-- No Selection Message -->
                <TextBlock Grid.Row="0" 
                           Text="Select an assembly from the list to view details"
                           FontSize="16" Foreground="Gray"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Visibility="{Binding IsAssemblySelected, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=True}"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>