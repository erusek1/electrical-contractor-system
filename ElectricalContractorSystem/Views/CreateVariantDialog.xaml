<Window x:Class="ElectricalContractorSystem.Views.CreateVariantDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Create Assembly Variant" Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Base Assembly Info -->
        <TextBlock Grid.Row="0" FontSize="14" Margin="0,0,0,10">
            <TextBlock.Text>
                <MultiBinding StringFormat="Creating variant of: {0} ({1})">
                    <Binding Path="BaseAssembly.Name"/>
                    <Binding Path="BaseAssembly.AssemblyCode"/>
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>
        
        <!-- Variant Name -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Variant Name:*" FontWeight="SemiBold"/>
            <TextBox Name="VariantNameTextBox" Text="{Binding VariantName}"/>
        </StackPanel>
        
        <!-- Instructions -->
        <TextBlock Grid.Row="2" 
                   Text="This variant will use the same code and inherit all materials. You can modify materials after creation."
                   TextWrapping="Wrap"
                   FontStyle="Italic"
                   Margin="0,0,0,10"/>
        
        <!-- Labor Adjustments -->
        <GroupBox Grid.Row="3" Header="Labor Minutes (Optional - leave blank to inherit)" Margin="0,0,0,10" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Current values -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Rough:" FontSize="10" Foreground="Gray"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="Finish:" FontSize="10" Foreground="Gray"/>
                <TextBlock Grid.Row="0" Grid.Column="2" Text="Service:" FontSize="10" Foreground="Gray"/>
                <TextBlock Grid.Row="0" Grid.Column="3" Text="Extra:" FontSize="10" Foreground="Gray"/>
                
                <!-- Input fields -->
                <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,5,0">
                    <TextBox Text="{Binding RoughMinutes}">
                        <TextBox.ToolTip>
                            <TextBlock>
                                <TextBlock.Text>
                                    <Binding Path="BaseAssembly.RoughMinutes" StringFormat="Current: {0} min"/>
                                </TextBlock.Text>
                            </TextBlock>
                        </TextBox.ToolTip>
                    </TextBox>
                </StackPanel>
                
                <StackPanel Grid.Row="1" Grid.Column="1" Margin="5,0">
                    <TextBox Text="{Binding FinishMinutes}">
                        <TextBox.ToolTip>
                            <TextBlock>
                                <TextBlock.Text>
                                    <Binding Path="BaseAssembly.FinishMinutes" StringFormat="Current: {0} min"/>
                                </TextBlock.Text>
                            </TextBlock>
                        </TextBox.ToolTip>
                    </TextBox>
                </StackPanel>
                
                <StackPanel Grid.Row="1" Grid.Column="2" Margin="5,0">
                    <TextBox Text="{Binding ServiceMinutes}">
                        <TextBox.ToolTip>
                            <TextBlock>
                                <TextBlock.Text>
                                    <Binding Path="BaseAssembly.ServiceMinutes" StringFormat="Current: {0} min"/>
                                </TextBlock.Text>
                            </TextBlock>
                        </TextBox.ToolTip>
                    </TextBox>
                </StackPanel>
                
                <StackPanel Grid.Row="1" Grid.Column="3" Margin="5,0,0,0">
                    <TextBox Text="{Binding ExtraMinutes}">
                        <TextBox.ToolTip>
                            <TextBlock>
                                <TextBlock.Text>
                                    <Binding Path="BaseAssembly.ExtraMinutes" StringFormat="Current: {0} min"/>
                                </TextBlock.Text>
                            </TextBlock>
                        </TextBox.ToolTip>
                    </TextBox>
                </StackPanel>
            </Grid>
        </GroupBox>
        
        <!-- Notes -->
        <TextBlock Grid.Row="4" 
                   Text="Note: Component changes are made after creating the variant."
                   FontStyle="Italic"
                   Foreground="Gray"
                   VerticalAlignment="Bottom"
                   Margin="0,10"/>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="CreateButton" Content="Create Variant" Width="100" Margin="0,0,10,0" 
                    IsDefault="True" Click="CreateButton_Click"/>
            <Button Name="CancelButton" Content="Cancel" Width="100" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
