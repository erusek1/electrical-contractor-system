<Window x:Class="ElectricalContractorSystem.Views.CreateVariantDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Assembly Variant" 
        Height="250" Width="400"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Text="Create New Variant" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>
        
        <!-- Form -->
        <StackPanel Grid.Row="1">
            <TextBlock Text="Creating a variant of:" Margin="0,0,0,5"/>
            <TextBlock Text="{Binding ParentAssemblyName}" 
                       FontWeight="Bold" 
                       Margin="0,0,0,15"/>
            
            <Label Content="Variant Name:"/>
            <TextBox x:Name="VariantNameTextBox" 
                     Text="{Binding VariantName, UpdateSourceTrigger=PropertyChanged}" 
                     Margin="0,0,0,10"/>
            
            <CheckBox Content="Use same code as parent assembly" 
                      IsChecked="{Binding UseSameCode}" 
                      Margin="0,0,0,10"/>
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Create" 
                    Width="100" 
                    Height="30" 
                    Margin="5"
                    IsDefault="True"
                    Click="CreateButton_Click"/>
            <Button Content="Cancel" 
                    Width="100" 
                    Height="30" 
                    Margin="5"
                    IsCancel="True"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
