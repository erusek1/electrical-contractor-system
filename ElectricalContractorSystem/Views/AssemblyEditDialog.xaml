<Window x:Class="ElectricalContractorSystem.Views.AssemblyEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Assembly Editor" Height="700" Width="900"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20">
            <TextBlock Text="{Binding WindowTitle}" Foreground="White" FontSize="24" FontWeight="Light"/>
        </Border>

        <!-- Assembly Basic Info -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Code -->
            <Label Grid.Row="0" Grid.Column="0" Content="Code:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Code}" 
                     IsEnabled="{Binding IsNewAssembly}"
                     FontSize="14" Padding="5"/>

            <!-- Name -->
            <Label Grid.Row="0" Grid.Column="2" Content="Name:" VerticalAlignment="Center"/>
            <TextBox Grid.Row="0" Grid.Column="3" Text="{Binding Name}" 
                     FontSize="14" Padding="5"/>

            <!-- Description -->
            <Label Grid.Row="1" Grid.Column="0" Content="Description:" VerticalAlignment="Top" Margin="0,5,0,0"/>
            <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" 
                     Text="{Binding Description}" 
                     TextWrapping="Wrap" AcceptsReturn="True"
                     Height="60" Margin="0,5,0,0"
                     VerticalScrollBarVisibility="Auto"/>

            <!-- Labor Minutes -->
            <Label Grid.Row="2" Grid.Column="0" Content="Labor Minutes:" VerticalAlignment="Center" Margin="0,10,0,0"/>
            <StackPanel Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Orientation="Horizontal" Margin="0,10,0,0">
                <Label Content="Rough:" Width="50"/>
                <TextBox Text="{Binding RoughMinutes}" Width="60" Margin="0,0,15,0"/>
                <Label Content="Finish:" Width="50"/>
                <TextBox Text="{Binding FinishMinutes}" Width="60" Margin="0,0,15,0"/>
                <Label Content="Service:" Width="50"/>
                <TextBox Text="{Binding ServiceMinutes}" Width="60" Margin="0,0,15,0"/>
                <Label Content="Extra:" Width="50"/>
                <TextBox Text="{Binding ExtraMinutes}" Width="60"/>
            </StackPanel>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Row="2" Margin="20,0,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Material Selection -->
            <GroupBox Grid.Column="0" Header="Available Materials">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Search -->
                    <TextBox Grid.Row="0" x:Name="MaterialSearchBox" 
                             Tag="Search materials..."
                             Text="{Binding MaterialSearchText, UpdateSourceTrigger=PropertyChanged}"
                             Margin="5" Padding="5,3">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <VisualBrush AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                                    <VisualBrush.Visual>
                                                        <Label Content="{Binding Tag, RelativeSource={RelativeSource AncestorType=TextBox}}" 
                                                               Foreground="Gray" Padding="5,0,0,0"/>
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- Category Filter -->
                    <ComboBox Grid.Row="1" ItemsSource="{Binding MaterialCategories}"
                              SelectedItem="{Binding SelectedMaterialCategory}"
                              Margin="5,0,5,5">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <!-- Materials List -->
                    <DataGrid Grid.Row="2" ItemsSource="{Binding FilteredMaterials}"
                              SelectedItem="{Binding SelectedMaterial}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              MouseDoubleClick="MaterialsGrid_MouseDoubleClick">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Code" Binding="{Binding ItemCode}" Width="60"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="Price" Binding="{Binding CurrentPrice, StringFormat=C}" Width="70"/>
                            <DataGridTextColumn Header="Unit" Binding="{Binding UnitOfMeasure}" Width="50"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </GroupBox>

            <!-- Right Panel - Assembly Components -->
            <GroupBox Grid.Column="2" Header="Assembly Components">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Add Component Controls -->
                    <Grid Grid.Row="0" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Content="&lt;&lt; Add Selected" 
                                Command="{Binding AddSelectedMaterialCommand}"
                                Padding="10,5" Margin="0,0,5,0"/>
                        <TextBox Grid.Column="1" Text="{Binding ComponentQuantity}" 
                                 HorizontalContentAlignment="Center" Margin="0,0,5,0"/>
                        <Label Grid.Column="2" Content="Qty" VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Components List -->
                    <DataGrid Grid.Row="1" ItemsSource="{Binding Components}"
                              SelectedItem="{Binding SelectedComponent}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Material" Binding="{Binding Material.Name}" Width="*"/>
                            <DataGridTextColumn Header="Code" Binding="{Binding Material.ItemCode}" Width="60"/>
                            <DataGridTemplateColumn Header="Qty" Width="60">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" 
                                                 HorizontalContentAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Unit" Binding="{Binding Material.UnitOfMeasure}" Width="50"/>
                            <DataGridTextColumn Header="Cost" Binding="{Binding TotalCost, StringFormat=C}" Width="70"/>
                            <DataGridTemplateColumn Header="" Width="30">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="X" 
                                                Command="{Binding DataContext.RemoveComponentCommand, 
                                                          RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Background="IndianRed" Foreground="White"
                                                Padding="5,0" Margin="2"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Total Cost -->
                    <Border Grid.Row="2" Background="#ECF0F1" Padding="10,5" Margin="0,5,0,0">
                        <TextBlock HorizontalAlignment="Right">
                            <Run Text="Total Material Cost: " FontWeight="Bold"/>
                            <Run Text="{Binding TotalMaterialCost, StringFormat=C}" FontWeight="Bold" FontSize="14"/>
                        </TextBlock>
                    </Border>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- Variants Section -->
        <GroupBox Grid.Row="3" Header="Assembly Variants" Margin="20,0,20,10" 
                  Visibility="{Binding ShowVariantsSection, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Vertical" Margin="5">
                    <CheckBox Content="Is Default Variant" IsChecked="{Binding IsDefault}" Margin="0,0,0,5"/>
                    <Button Content="Create New Variant" Command="{Binding CreateVariantCommand}" 
                            Padding="10,5" HorizontalAlignment="Left"/>
                </StackPanel>

                <DataGrid Grid.Column="1" ItemsSource="{Binding ExistingVariants}" 
                          AutoGenerateColumns="False" MaxHeight="100" Margin="10,5,5,5"
                          CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Variant Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridCheckBoxColumn Header="Default" Binding="{Binding IsDefault}" Width="60"/>
                        <DataGridTextColumn Header="Components" Binding="{Binding ComponentCount}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>

        <!-- Dialog Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,0,20,20">
            <Button Content="Save" Command="{Binding SaveCommand}" IsDefault="True"
                    Width="100" Padding="10,5" Margin="0,0,10,0"
                    Background="#27AE60" Foreground="White"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}" IsCancel="True"
                    Width="100" Padding="10,5"
                    Background="#95A5A6" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>