<Window x:Class="ElectricalContractorSystem.Views.AssemblyEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding Title}" 
        Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Text="{Binding Title}" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>
        
        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Basic Information -->
                <GroupBox Header="Basic Information" Margin="0,0,0,15" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Label Content="Assembly Code:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding AssemblyCode, UpdateSourceTrigger=PropertyChanged}" 
                                 Grid.Row="0" Grid.Column="1" 
                                 Margin="5" 
                                 CharacterCasing="Lower"/>
                        
                        <Label Content="Name:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                                 Grid.Row="1" Grid.Column="1" 
                                 Margin="5"/>
                        
                        <Label Content="Category:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                        <ComboBox ItemsSource="{Binding Categories}" 
                                  SelectedItem="{Binding Category}" 
                                  Grid.Row="2" Grid.Column="1" 
                                  Margin="5"/>
                        
                        <Label Content="Description:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Top" Margin="0,5,0,0"/>
                        <TextBox Text="{Binding Description}" 
                                 Grid.Row="3" Grid.Column="1" 
                                 Margin="5" 
                                 TextWrapping="Wrap" 
                                 AcceptsReturn="True" 
                                 Height="60"
                                 VerticalScrollBarVisibility="Auto"/>
                    </Grid>
                </GroupBox>
                
                <!-- Labor Minutes -->
                <GroupBox Header="Labor Minutes by Stage" Margin="0,0,0,15" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Label Content="Rough:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding RoughMinutes, UpdateSourceTrigger=PropertyChanged}" 
                                 Grid.Row="0" Grid.Column="1" 
                                 Margin="5"/>
                        
                        <Label Content="Finish:" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding FinishMinutes, UpdateSourceTrigger=PropertyChanged}" 
                                 Grid.Row="0" Grid.Column="3" 
                                 Margin="5"/>
                        
                        <Label Content="Service:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding ServiceMinutes, UpdateSourceTrigger=PropertyChanged}" 
                                 Grid.Row="1" Grid.Column="1" 
                                 Margin="5"/>
                        
                        <Label Content="Extra:" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center"/>
                        <TextBox Text="{Binding ExtraMinutes, UpdateSourceTrigger=PropertyChanged}" 
                                 Grid.Row="1" Grid.Column="3" 
                                 Margin="5"/>
                        
                        <Label Content="Total Minutes:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" FontWeight="Bold"/>
                        <TextBlock Text="{Binding TotalMinutes}" 
                                   Grid.Row="2" Grid.Column="1" 
                                   VerticalAlignment="Center"
                                   Margin="5"
                                   FontWeight="Bold"/>
                    </Grid>
                </GroupBox>
                
                <!-- Options -->
                <GroupBox Header="Options" Margin="0,0,0,15" Padding="10">
                    <StackPanel>
                        <CheckBox Content="Set as default variant for this code" 
                                  IsChecked="{Binding IsDefault}" 
                                  Margin="5"/>
                        <CheckBox Content="Active" 
                                  IsChecked="{Binding IsActive}" 
                                  Margin="5"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0">
            <Button Content="Save" 
                    Command="{Binding SaveCommand}" 
                    Width="100" 
                    Height="30" 
                    Margin="5"
                    IsDefault="True"/>
            <Button Content="Cancel" 
                    Command="{Binding CancelCommand}" 
                    Width="100" 
                    Height="30" 
                    Margin="5"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
